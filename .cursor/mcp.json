{
    "mcpServers": {
        "github": {
            "command": "npx",
            "args": [
                "-y",
                "@modelcontextprotocol/server-github"
            ],
            "env": {
                "GITHUB_PERSONAL_ACCESS_TOKEN": "<YOUR_TOKEN>"
            }
        },
        "context7": {
            "command": "npx",
            "args": [
                "-y",
                "@upstash/context7-mcp@latest"
            ]
        },
        "browser-tools": {
            "command": "npx",
            "args": [
                "-y",
                "@agentdeskai/browser-tools-mcp@1.2.0"
            ]
        },
        "server-sequential-thinking": {
            "command": "npx",
            "args": [
                "-y",
                "@smithery/cli@latest",
                "run",
                "@smithery-ai/server-sequential-thinking",
                "--key",
                "1819a691-b2b5-4f8a-8ada-4c57b838f48d"
            ]
        },
        "knowledge-graph-server": {
            "command": "npx",
            "args": [
                "-y",
                "@smithery/cli@latest",
                "run",
                "@jlia0/servers",
                "--config",
                "{\"memoryFilePath\":\"//wsl$/ubuntu/home/vrish/workspace-shared/multi-agent-training/knowledge-graph/memory.json\"}",
                "--key",
                "1819a691-b2b5-4f8a-8ada-4c57b838f48d"
            ]
        },
        "memory-bank": {
            "command": "npx",
            "args": [
                "@movibe/memory-bank-mcp --mode code"
            ]
        },
        "memory-bank-pepper": {
            "command": "npx",
            "args": [
                "-y",
                "@allpepper/memory-bank-mcp@latest"
            ],
            "env": {
                "MEMORY_BANK_ROOT": "//wsl$/ubuntu/home/vrish/workspace-shared/multi-agent-training/memory-bank"
            }
        }
    }
}